<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageCoach"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/tvCoachName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coach Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tvCoachSpecialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialization"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvCoachExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5+ years experience"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvCoachBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio or description goes here"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvCoachRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ 4.5"
            android:textColor="#FF8800"
            android:paddingTop="4dp" />

        <Button
            android:id="@+id/btnCoachContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

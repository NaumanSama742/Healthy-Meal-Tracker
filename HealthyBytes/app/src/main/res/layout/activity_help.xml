<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <!-- Replaced the include with the AppBar Header -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@color/secondary"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/helpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backBtn"
                android:layout_marginStart="14dp"
                android:layout_centerVertical="true"
                android:text="Help"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable content below AppBar -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Guide / Tutorials -->
            <TextView
                android:text="📚 User Guide &amp; Tutorials"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <!-- Q&A for User Guide -->
            <TextView
                android:text="How to use Meal Tracker ?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="1. Navigate to the 'Meal Planner' tab from the bottom navigation.\n2. Tap the '+' button to log a new meal.\n3. Add a photo, describe your meal, and save it. Your meals are automatically tracked with timestamps."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="How to connect Google Fit ?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="1. Go to the 'Settings' section of the app.\n2. Tap on 'Connect with Google Fit'.\n3. Follow the on-screen prompts to grant permission for the app to access your health data."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Watch our video tutorials on YouTube ?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Search for 'HealthyBites' on YouTube for a full library of video guides and tutorials."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <!-- Troubleshooting -->
            <TextView
                android:text="🛠️ Troubleshooting"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="• Steps not syncing? Check Google Fit permissions.\n• Notifications not showing? Enable system permissions."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <!-- Feature Glossary -->
            <TextView
                android:text="📖 Feature Glossary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <!-- Q&A for Feature Glossary -->
            <TextView
                android:text="Meal Tracker"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="A feature to log your daily meals with photos and timestamps, helping you maintain a detailed food journal."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Water Reminder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="This functionality sends you regular alerts to remind you to drink water and stay hydrated throughout the day."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Coach"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="A personalized dietary planner that provides you with custom meal plans and health goals based on your profile."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="BMI Monitor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="This tool helps you track your Body Mass Index over time, giving you a clear view of your body health."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Step Counter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="This feature automatically counts your daily steps by syncing with your Google Fit data."
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <!-- Contact Support -->
            <TextView
                android:text="📞 Contact Support"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Email: support@healthybites.com\nPhone: +91-1234567890"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_input_add"
        app:backgroundTint="@color/secondary"
        app:fabCustomSize="50dp"
        app:maxImageSize="40dp"
        app:tint="@color/white" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:itemIconTint="@color/secondary"
        app:itemTextColor="@color/secondary"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>

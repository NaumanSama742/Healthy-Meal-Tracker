<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_background"
    android:gravity="center"
    android:backgroundTint="@color/white"
    android:paddingTop="200dp">

    <!-- Main App Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_healthy_bites_logo"
        android:layout_centerInParent="true"/>

    <!-- Powered by text above MU logo -->
    <TextView
        android:id="@+id/poweredByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:layout_above="@id/muLogo"
        android:layout_centerHorizontal="true"
        android:paddingBottom="4dp"/>

    <!-- MU Logo at bottom -->
    <ImageView
        android:id="@+id/muLogo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mu_logo"
        android:contentDescription="@string/mu_logo_desc"/>

</RelativeLayout>

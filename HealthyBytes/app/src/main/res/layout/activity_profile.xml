<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="80dp"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Purple Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/secondary">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:src="@drawable/back"
                    android:contentDescription="Back Button" />

                <!--Profile Image -->
                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_user"
                    app:civ_border_width="2dp"
                    android:tint="@color/white"
                    app:civ_border_color="@color/white"
                    tools:ignore="MissingClass,UseAppTint" />

                <!-- Name -->
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MNS Dev"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/profilePic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alexflores@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_below="@id/nameText"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <!-- Profile Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                android:background="@color/white">

                <!-- My Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/imgmyDetail"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_user_detail"
                        android:tint="@color/secondary"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/txtmyDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="My Details"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrowmyDetail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow"
                        app:tint="@color/primary"
                        android:contentDescription="Arrow" />
                </LinearLayout>

                <!-- Notification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/imgRemindeder"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_notification"
                        android:contentDescription="Notifications"
                        app:tint="@color/secondary" />

                    <TextView
                        android:id="@+id/txtRemindeder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="Set Reminder"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrowRemindeder"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow"
                        app:tint="@color/primary"
                        android:contentDescription="Arrow" />
                </LinearLayout>

                <!-- AboutUs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/imgAboutUs"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        android:src="@drawable/aboutus"
                        android:contentDescription="AboutUs"
                        app:tint="@color/secondary" />

                    <TextView
                        android:id="@+id/txtAboutUs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="About Us"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrowAboutUs"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow"
                        app:tint="@color/primary"
                        android:contentDescription="Arrow" />
                </LinearLayout>

                <!-- Logout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:id="@+id/imgLogout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_logout"
                        android:contentDescription="Logout"
                        app:tint="@color/secondary" />

                    <TextView
                        android:id="@+id/txtLogout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="Logout"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrowLogout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow"
                        app:tint="@color/primary"
                        android:contentDescription="Arrow" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
